{
  "name": ".NET on Azure",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    // Http
    8080,
    // Https
    8081
  ],
  // More info https://aka.ms/dev-containers-non-root.
  "remoteUser": "root",
  // See complete list https://github.com/devcontainers/features
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "extensions": "azure-devops, containerapp, staticwebapp"
    },
    "ghcr.io/azure/azure-dev/azd:0": {},
    // Read more https://github.com/hashicorp/vscode-terraform/issues/1524#issuecomment-1614892272
    "ghcr.io/alertbox/opentofu/tofu:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    }
  },
  "containerEnv": {
    // Set dotnet CLI environment settings.
    "DOTNET_CLI_TELEMETRY_OPTOUT": "true",
    "DOTNET_GENERATE_ASPNET_CERTIFICATE": "true",
    "DOTNET_NOLOGO": "true",
    // Set ASP.NET environment settings.
    "ASPNETCORE_URLS": "http://+:8080;https://+:8081",
    "ASPNETCORE_ENVIRONMENT": "Development",
    "AZURE_DEV_COLLECT_TELEMETRY": "no"
  },
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        // .NET and C#
        "ms-dotnettools.csdevkit",
        "humao.rest-client",
        // Notebooks require >= .NET9
        "ms-dotnettools.dotnet-interactive-vscode",
        // Azure and Kubernetes
        "ms-vscode.vscode-node-azure-pack",
        "ms-azuretools.vscode-azureterraform",
        // Db
        "ms-mssql.mssql",
        "ms-mssql.sql-database-projects-vscode",
        // Misc.
        "EditorConfig.EditorConfig",
        "redhat.vscode-yaml",
        "albert.tabout",
        "streetsidesoftware.code-spell-checker",
        "redhat.fabric8-analytics"
      ],
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "bicep.enableSurveys": false,
        "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
        "dotnet.formatting.organizeImportsOnFormat": true,
        "cSpell.dictionaries": [
          "ignore"
        ],
        "cSpell.dictionaryDefinitions": [
          {
            "name": "ignore",
            "path": "${workspaceFolder}/.spellcheckignore"
          }
        ],
        "cSpell.useGitignore": true,
        "redhat.telemetry.enabled": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "updateContentCommand": {
    "dev-certs": "dotnet dev-certs https -t || exit 0",
    "clean": "rm -rf **/bin **/obj || exit 0"
  },
  "mounts": [
    "source=${localEnv:HOME}/.azure,target=/root/.azure,type=bind,consistency=cached"
  ],
  "postCreateCommand": {
    "restore": "dotnet restore --no-cache --force || exit 0"
  }
}
